<%= form_tag("/users", method: "post") do %>
    <%= label_tag(:username, "Please provide your Username") %>
    <%= text_field_tag(:username) %>
    <br>
    <%= label_tag(:email, "please provide your email") %>
    <%= email_field_tag 'email'  %>
    <br>
    <%= label_tag(:password, "Please provide your password") %>
    <%= password_field_tag(:password) %>
    <br>
    <%= submit_tag("Submit") %>
    <% end %> 