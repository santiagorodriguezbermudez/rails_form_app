<%= form_for @user do |f| %>
  <%= f.label :username, 'Please input your username:' %>
  <%= f.text_field :username, placeholder: "Example Username" %><br>
  <%= f.label :email, 'Please input your email:' %>
  <%= f.email_field :email, placeholder: "example@example.com"  %><br>
  <%= f.label :password, 'Please input your password:' %>
  <%= f.password_field :password, placeholder: "6 characters password" %><br>
  <%= f.submit%>
<% end %>

